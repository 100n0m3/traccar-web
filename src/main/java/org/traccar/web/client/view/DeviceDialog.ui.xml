<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
  	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
  	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
  	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutData">
    <ui:attributes width="1" height="-1" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutDataLine">
    <ui:attributes width="1" height="27" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="horizontalLayoutData">
    <ui:attributes width="-1" height="1" />
  </ui:with>

  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="middleLabelMargins">
    <ui:attributes top="4" right="4" bottom="0" left="4" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="middleHorizontalLayoutData">
    <ui:attributes width="-1" height="1" margins="{middleLabelMargins}" />
  </ui:with>

  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="leftLabelMargins">
    <ui:attributes top="4" right="0" bottom="0" left="4" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="leftHorizontalLayoutData">
    <ui:attributes width="-1" height="1" margins="{leftLabelMargins}" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="integerPropertyEditor" />
  <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="doublePropertyEditor" />

  <ui:with field='i18n' type='org.traccar.web.client.i18n.Messages' />

  <gxt:Window ui:field="window" pixelSize="375, 310" modal="true" headingText="{i18n.device}" focusWidget="{saveButton}">
    <container:VerticalLayoutContainer>
      <container:child layoutData="{verticalLayoutData}">
        <form:FieldLabel text="{i18n.name}" labelWidth="140">
          <form:widget>
            <form:TextField ui:field="name" allowBlank="false" />
          </form:widget>
        </form:FieldLabel>
      </container:child>
      <container:child layoutData="{verticalLayoutData}">
        <form:FieldLabel text="{i18n.uniqueIdentifier}" labelWidth="140">
          <form:widget>
            <form:TextField ui:field="uniqueId" allowBlank="false" />
          </form:widget>
        </form:FieldLabel>
      </container:child>
      <container:child layoutData="{verticalLayoutData}">
          <form:FieldLabel text="{i18n.deviceTimeout} ({i18n.second})" labelWidth="140">
              <form:widget>
                  <form:NumberField editor="{integerPropertyEditor}"
                                    ui:field="timeout"
                                    allowNegative="false"
                                    allowDecimals="false"
                                    allowBlank="false"
                                    width="5" />

              </form:widget>
          </form:FieldLabel>
      </container:child>
      <container:child layoutData="{verticalLayoutData}">
        <form:FieldLabel text="{i18n.idleWhenSpeedIsLE}" labelWidth="140">
            <form:widget>
                <form:NumberField editor="{doublePropertyEditor}"
                                  ui:field="idleSpeedThreshold"
                                  allowNegative="false"
                                  allowDecimals="true"
                                  allowBlank="false"
                                  width="5" />

            </form:widget>
        </form:FieldLabel>
      </container:child>
      <container:child layoutData="{verticalLayoutDataLine}">
        <container:HorizontalLayoutContainer>
            <container:child layoutData="{horizontalLayoutData}">
                <form:FieldLabel text="{i18n.odometer}" labelWidth="140">
                    <form:widget>
                        <form:NumberField editor="{doublePropertyEditor}"
                                          ui:field="odometer"
                                          allowNegative="false"
                                          allowDecimals="true"
                                          allowBlank="false"
                                          width="100" />
                    </form:widget>
                </form:FieldLabel>
            </container:child>
            <container:child layoutData="{middleHorizontalLayoutData}">
                <g:Label text="{i18n.km}"/>
            </container:child>
            <container:child layoutData="{leftHorizontalLayoutData}">
                <form:CheckBox ui:field="autoUpdateOdometer" boxLabel="{i18n.auto}" />
            </container:child>
        </container:HorizontalLayoutContainer>
      </container:child>
      <container:child layoutData="{verticalLayoutData}">
          <container:VerticalLayoutContainer ui:field="devicePictures" />
      </container:child>
    </container:VerticalLayoutContainer>
      
    <gxt:button>
      <button:TextButton ui:field="saveButton" text="{i18n.save}" />
    </gxt:button>
    <gxt:button>
      <button:TextButton ui:field="cancelButton" text="{i18n.cancel}" />
    </gxt:button>
  </gxt:Window>

</ui:UiBinder>
